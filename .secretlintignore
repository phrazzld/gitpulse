# Ignore files that legitimately contain secrets
.env
.env.*
!.env.example
!.env.*.example

# Ignore common directories
node_modules/
.git/
.next/
build/
dist/
coverage/
logs/

# Ignore lock files and generated files
package-lock.json
yarn.lock
pnpm-lock.yaml

# Ignore test fixtures that might contain mock secrets
**/__tests__/fixtures/**
**/__mocks__/**
**/test-data/**