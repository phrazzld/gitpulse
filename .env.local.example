# GitHub OAuth credentials (REQUIRED for personal authentication)
# Create at: https://github.com/settings/applications/new
GITHUB_OAUTH_CLIENT_ID=your_github_client_id
GITHUB_OAUTH_CLIENT_SECRET=your_github_client_secret

# GitHub App credentials (OPTIONAL - only needed for GitHub App authentication)
# The following three variables are REQUIRED if you're using GitHub App auth mode
# Create a GitHub App at: https://github.com/settings/apps/new

# The numeric ID of your GitHub App (found in the app settings)
GITHUB_APP_ID=your_github_app_id

# The private key for your GitHub App in PKCS8 format
# Note: Must be the entire PEM file content including BEGIN/END lines
# You can convert from PKCS1 format with: openssl pkcs8 -topk8 -nocrypt -in pkcs1-key.pem -out pkcs8-key.pem
GITHUB_APP_PRIVATE_KEY_PKCS8=your_github_app_private_key

# The name of your GitHub App (used for UI display)
# Must be visible to users for installation
NEXT_PUBLIC_GITHUB_APP_NAME=your_github_app_name

# NextAuth.js settings
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000

# Gemini API settings
GEMINI_API_KEY=your_gemini_api_key